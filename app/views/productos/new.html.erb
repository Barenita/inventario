<div class="es bsk">
  <div class="brv">
    <div class="brw">
      <h5 class="brx">PRODUCTOS</h5>
      <h2 class="brx">AGREGAR</h2>
    </div>
  </div>

  <div class="bpx azo">
    
  </div>

  
  
  <%= form_tag({:action => 'save'}, {:class =>'form-horizontal'}) do %>
    <div class="form-group">
      <label for="nombre">Nombre:</label>
      <%= text_field_tag 'nombre',@nombre, class: 'form-control', placeholder: "Escriba el nombre" %>
    </div>
    <div class="form-group">
      <label for="marca">Marca:</label>
      <%= select_tag(:marca_id, options_for_select(@marcas_options),  class: 'form-control', :prompt=>"Selecione la marca" ) %>
    </div>
    <div class="form-group">
      <label for="descripcion">Descripcion:</label>
      <%= text_area_tag 'descripcion',@descripcion, class: 'form-control', placeholder: "Escriba la descripciÃ³n", rows:3 %>
    </div>
    <div class="form-group">
      <label for="precio">Precio:</label>
      <%= text_field_tag 'precio',@precio, class: 'form-control', placeholder: "Escriba el precio" %>
    </div>
    
    <%= submit_tag 'Agregar', class: 'btn btn-default'%> 
  
      <% flash.each do |key, value| %>
         <div class="alert alert-danger">
          <strong>Error!</strong> <%= value %>
          </div>
      <% end %>
    
    
  <% end %>


</div>

